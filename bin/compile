#!/bin/bash
# usage: bin/compile <build-dir> <cache-dir>

set -eo pipefail

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
ver=1.0.3
file=go$ver.linux-amd64.tar.gz
url=http://go.googlecode.com/files/$file
buildpack=$(dirname $(dirname $0))

# Python
venv=$cache/venv
mkdir -p $cache/pip
python=python2.7
PATH=$venv/bin:$PATH

virtualenv() {
    python "$buildpack/vendor/virtualenv-1.7/virtualenv.py" "$@"
}

if test -d $build/.go/$ver/go
then
    echo "-----> Using Go $ver"
else
    rm -rf $build/.go/* # be sure not to build up cruft
    mkdir -p $build/.go/$ver
    cd $build/.go/$ver
    echo -n "-----> Installing Go $ver..."
    curl -sO $url
    tar zxf $file
    rm -f $file
    echo " done"
fi

GOROOT=$build/.go/$ver/go export GOROOT
PATH=$GOROOT/bin:$PATH

if ! (which hg > /dev/null && which bzr > /dev/null)
then
    echo -n "       Installing Virtualenv..."
    virtualenv --python $python --distribute --never-download --prompt='(venv) ' $venv > /dev/null 2>&1
    . $venv/bin/activate > /dev/null 2>&1
    echo " done"

    echo -n "       Installing Mercurial..."
    pip install --use-mirrors mercurial > /dev/null 2>&1
    echo " done"

#    echo -n "       Installing Bazaar..."
#    pip install --use-mirrors bzr > /dev/null 2>&1
#    echo " done"
fi

mkdir -p $build/.go/src/_app
cp -R $build/* $build/.go/src/_app

export GOPATH=$build/.go

unset GIT_DIR # unset git dir or it will mess with goinstall
echo "-----> Getting and building Revel"
cd $build
go get github.com/robfig/revel | sed -u 's/^/       /'
go get github.com/jamesward/revel | sed -u 's/^/       /'
go build -o bin/revel github.com/jamesward/revel/cmd | sed -u 's/^/       /'
